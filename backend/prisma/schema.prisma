generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
  nome  String
  papel String

  @@map("usuario")
}

model Funcionario {
  id            Int      @id @default(autoincrement())
  nome          String
  sobrenome     String
  cargo         String
  cpf           String   @unique @db.VarChar(11)
  data_admissao DateTime
  matricula     Int      @unique

  @@map("funcionario")
}
